<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="attendance.gui.controller.RootTeacherController">
   <top>
      <HBox fx:id="buttonBar" alignment="CENTER" prefHeight="70.0" prefWidth="200.0" styleClass="btnBar" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="btnDashboard" buttonType="RAISED" onAction="#showDashboard" text="Dashboard" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="5.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="btmStudentAttendance" buttonType="RAISED" onAction="#showStudentAttendance" text="Student Attendance" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="5.0" />
               </HBox.margin>
            </JFXButton>
            <Label styleClass="btnBarNameLabel" text="Hello Jeppe!">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/icons8-male-user-96.png" />
               </image>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </ImageView>
            <JFXButton fx:id="btnLogout" buttonType="RAISED" onAction="#handleLogout" text="Log out" textFill="WHITE" />
         </children>
      </HBox>
   </top>
   <center>
      <AnchorPane fx:id="attachable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
